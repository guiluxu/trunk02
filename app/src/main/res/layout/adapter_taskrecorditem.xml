<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_mag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp10"
        android:layout_marginLeft="@dimen/dp15"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        android:orientation="horizontal">

        <RelativeLayout

            android:layout_width="@dimen/dp115"
            android:layout_height="@dimen/dp86"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_mag1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@mipmap/img_moren" />

            <ImageView
                android:id="@+id/iv_deal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_mag3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="@dimen/dp15" />


                <!--<LinearLayout-->
                <!--android:layout_width="0dp"-->
                <!--android:layout_weight="1.5"-->
                <!--android:gravity="left|center_vertical"-->
                <!--android:layout_height="match_parent">-->
                <!--<TextView-->
                <!--android:id="@+id/tv_mag4"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:background="@drawashape_tasklistcla_bgtv_red"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text="井盖缺失"-->
                <!--android:textColor="@color/tasking_red"-->
                <!--android:textSize="12sp"-->
                <!--/>-->
                <!--</LinearLayout>-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="left|center_vertical">

                <TextView
                    android:id="@+id/tv_mag2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tasklistrexian_bgtv"
                    android:gravity="left|center_vertical"
                    android:paddingLeft="@dimen/dp5"
                    android:paddingRight="@dimen/dp5"
                    android:text="热线"
                    android:textColor="#ff8400"
                    android:textSize="@dimen/dp14" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="left|center_vertical">

                <TextView
                    android:layout_width="@dimen/dp35"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tasklistclabig_bgtv"
                    android:gravity="center"
                    android:text="大类"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_mag4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:gravity="left|center_vertical">

                <TextView
                    android:layout_width="@dimen/dp35"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_tasklistclasmall_bgtv"
                    android:gravity="center"
                    android:text="小类"
                    android:textColor="@color/white"
                    android:textSize="@dimen/sp14" />

                <TextView
                    android:id="@+id/tv_mag5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="@dimen/sp14" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_mag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp5"
                android:layout_weight="1"
                android:drawableLeft="@mipmap/ico_shangbao_time"
                android:drawablePadding="@dimen/dp6"
                android:text=""
                android:textColor="#999999"
                android:textSize="@dimen/sp12" />

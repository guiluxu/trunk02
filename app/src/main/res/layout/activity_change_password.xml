<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="@color/app_bg"
    android:orientation="vertical">


    <include layout="@layout/activity_top"/>
     <View
         android:layout_width="match_parent"
         android:layout_height="@dimen/dp20"/>
    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="@dimen/dp320"
        android:layout_height="@dimen/dp50"
        android:background="@drawable/shape_changepas_bgev"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="RtlCompat">
        <ImageView
            android:layout_width="@dimen/dp45"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_logo_user_normal"
            android:scaleType="centerInside" />
        <View
            style="@style/view_v01"
            android:layout_height="@dimen/dp22"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@null"
            android:layout_weight="1"
            android:hint="用户名"
            android:maxLines="1"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/text_hintlogin"
            android:textSize="@dimen/sp15" />
        <ImageView
            android:layout_width="50dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/btn_password_clear"/>
    </LinearLayout><LinearLayout
        android:id="@+id/ll_login_input_name"
        android:layout_width="@dimen/dp320"
        android:layout_height="@dimen/dp50"
        android:background="@drawable/shape_changepas_bgev"
        android:layout_marginTop="@dimen/dp5"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:ignore="RtlCompat">
        <ImageView
            android:layout_width="@dimen/dp45"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_logo_password"
            android:scaleType="centerInside" />
        <View
            style="@style/view_v01"
            android:layout_height="@dimen/dp22"/>
        <EditText
            android:id="@+id/etPassword1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@null"
            android:layout_weight="1"
            android:hint="原密码"
            android:password="true"
            android:maxLines="1"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/text_hintlogin"
            android:textSize="@dimen/sp15" />
        <ImageView
            android:id="@+id/iv_clean"
            android:layout_width="50dp"
            android:visibility="invisible"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@mipmap/btn_password_clear"/>
    </LinearLayout>

<LinearLayout
    android:layout_width="@dimen/dp320"
    android:background="@drawable/shape_changepas_bgev"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/dp10"
    android:layout_height="wrap_content">
    <LinearLayout
    android:layout_width="match_parent"
    android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp50">
        <ImageView

            android:layout_width="@dimen/dp45"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_logo_password"

            android:scaleType="centerInside" />
    <View
        style="@style/view_v01"
        android:layout_height="@dimen/dp22"/>
    <EditText
        android:id="@+id/etPassword2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/dp10"
        android:background="@null"
        android:hint="新密码"
        android:password="true"
        android:maxLines="1"
        android:textColor="@color/color_666666"
        android:textColorHint="@color/text_hintlogin"
        android:textSize="@dimen/sp15" />
</LinearLayout>
    <View
       style="@style/view_h01"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="@dimen/dp50">
        <ImageView
            android:layout_width="@dimen/dp45"
            android:layout_height="match_parent"
            android:src="@mipmap/ico_logo_password"
            android:scaleType="centerInside" />
        <View
            style="@style/view_v01"
            android:layout_height="@dimen/dp22"/>
        <EditText
            android:id="@+id/etPassword3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp10"
            android:background="@null"
            android:hint="再次输入新密码"
            android:password="true"
            android:maxLines="1"
            android:textColor="@color/color_666666"
            android:textColorHint="@color/text_hintlogin"
            android:textSize="@dimen/sp15" />
    </LinearLayout>
</LinearLayout>
    <Button
        android:id="@+id/btn_sure"
        android:layout_width="@dimen/dp320"
        android:layout_height="@dimen/dp48"
        android:layout_marginTop="@dimen/dp70"
        android:text="确 定"
        android:background="@drawable/shape_changepasselectno_bgbtn"
        android:textColor="#FFFFFFFF"
        android:textSize="@dimen/sp15" />
</LinearLayout>